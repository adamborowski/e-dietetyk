{% extends 'DietBundle::base.html.twig' %}

{% block title %}Twoje diety{% endblock %}
{% block contentTitle %}Twoje diety{% endblock %}

{% block content %}
    <div class="btn-group">
        <button id="new_diet_button" class="btn btn-primary">Nowa dieta</button>
    </div>
    <div>&nbsp;</div>
    <table class="table table-striped text-center">
        <tr>
            <th class="text-center">Nazwa</th>
            <th class="text-center">Cel</th>
            <th class="text-center" style="width: 30%;">Akcja</th>
        </tr>
    {% for diet in diets %}
        <tr>
            <td>{{ diet.nazwa }}</td>
            <td>
                {% if diet.cel == 1 %}
                    na masę
                {% elseif diet.cel == 2 %}
                    bez zmian
                {% else %}
                    schudnięcie
                {% endif %}
            </td>
            <td>
                <a href="{{ path('diet_diet_details') }}?id={{ diet.id }}">szczegóły</a>
                <br>
                <a href="{{ path('diet_diet_plan') }}?id={{ diet.id }}">zobacz plan</a>
            </td>
        </tr>
    {% endfor %}
    {% if not(diets) %}
        <tr>
            <td colspan="3" class="text-center">brak diet</td>
        </tr>
    {% endif %}
    </table>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    $(function(){
        $('#new_diet_button').on('click', function() {
            window.console.log('sdf')
            window.location.href = '{{ path('diet_diet_details') }}';
        });
    });
</script>
{% endblock %}